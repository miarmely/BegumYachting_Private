<link rel="stylesheet" href="~/css/miar_user.create.css"/>
<link rel="stylesheet" href="~/css/miar_module.userForm.css"/>


<div class="table-agile-info">
    <div class="panel panel-default">
        @*title*@
        <div class="panel-heading">KULLANICILAR</div>
        @*/title*@

        <div class="panel-body">
            <form>
                <div id="div_form" class="form-horizontal bucket-form" style="padding-top:20px">                    
                    @{
                        #region add inputs
                        var inputInfos = new object[][]{
                            new object[] {"input", "text", "firstnameLastname", "Ad Soyad", true},  // type for case | type for input | id | label name | info message
                            new object[] {"input", "text", "phone", "Telefon", true},
                            new object[] {"input", "text", "email", "Email", true},
                            new object[] {"input", "text", "flag" , "Bayrak", true},
                            new object[] {"input", "text", "newPassportNo", "Yeni Pasaport No", true},
                            new object[] {"input", "text", "oldPassportNo", "Eski Pasaport No", true},
                            new object[] {"input", "text", "rank", "Rank", true},
                            new object[] {"input", "datetime-local", "issueDate", "Pasaport Veriliş Tarihi", false},
                            new object[] {"input", "datetime-local", "passportExpiration", "Pasaport Bitiş Tarihi", false},
                            new object[] {"input", "text", "nationality", "Uyruk", true},
                            new object[] {"input", "date", "birthDate", "Doğum Tarihi", false},
                            new object[] {"input", "text", "birthPlace", "Doğum Yeri", true},
                            new object[] {"input", "text", "gender", "Cinsiyet", true},
                            new object[] {"select", "yachtType", "Yat Tipi", new string[] {"MotorYacht", "SailingYacht", "Catamaran"}, true},  // type for case | id | label name | options | info message
                            new object[] {"input", "text", "yachtName", "Yat Adı", true}
                        };

                        foreach (var inputInfo in inputInfos)
                        {
                            switch (inputInfo[0])
                            {
                                case "input":
                                    <div id="div_@inputInfo[2]" class="form-group">
                                        <label class="col-sm-3 control-label">@inputInfo[3]</label>
                                        <div class="col-sm-6">
                                            <input id="inpt_@inputInfo[2]" type="@inputInfo[1]" class="form-control" >
                                            <span id="spn_help_inpt_@inputInfo[2]" class="help-block"></span>
                                        </div>
                                        
                                        @if((bool)inputInfo[4])
                                        {
                                            // add info message if desired
                                            <div class="col-sm-3 div_infoMessage">
                                                <button type="button" tabindex="-1" data-toggle="dropdown" class="dropdown-toggle"></button>
                                                <ul role="menu" class="dropdown-menu"></ul>
                                            </div>   
                                        }
                                    </div>
                                    break;

                                case "select":
                                    <div id="div_@inputInfo[1]" class="form-group">
                                        <label class="col-sm-3 control-label">@inputInfo[2]</label>
                                        <div class="col-sm-6">
                                            <select id="slct_@inputInfo[1]" class="form-control" aria-label="">
                                                @{
                                                    #region add options to select
                                                    var options = (string[])inputInfo[3];

                                                    foreach(var option in options)
                                                    {
                                                        <option value="@option">@option</option>
                                                    }
                                                    #endregion
                                                }
                                            </select>
                                            <span class="help-block"></span>
                                        </div>
                                        @if ((bool)inputInfo[4])
                                        {
                                            // add info message if desired
                                            <div class="col-sm-3 div_infoMessage">
                                                <button type="button" tabindex="-1" data-toggle="dropdown" class="dropdown-toggle"></button>
                                                <ul role="menu" class="dropdown-menu"></ul>
                                            </div>
                                        }
                                    </div>  
                                    break;
                            }
                        }
                        #endregion
                    }

                    @*is personal?*@
                    <div id="div_isPersonal" class="form-group">
                        <label class="col-sm-3 control-label">Personel Mi</label>
                        <div class="col-sm-6">
                            <div id="div_radio">
                                @*radio 1*@ 
                                <div class="form-check" style="float: left;  margin-right: 15px">
                                    <input id="rad_yes" class="form-check-input" type="radio" name="isPersonal" checked>
                                    <label for="rad_yes" class="form-check-label">Evet</label>
                                </div>
                                @*radio 2*@ 
                                <div class="form-check">
                                    <input id="rad_no" class="form-check-input" type="radio" name="isPersonal">
                                    <label for="rad_no" class="form-check-label">Hayır</label>
                                </div>
                            </div>
                            <span id="spn_help_inpt_isPersonal" class="help-block"></span>
                        </div>
                    </div>

                    @*new password*@
                    <div id="div_password" class="form-group">
                        <label class="col-sm-3 control-label">Yeni Şifre</label>
                        <div class="col-sm-6">
                            <input id="inpt_password" type="password" class="form-control" />
                            <span id="spn_help_inpt_password" class="help-block"></span>
                        </div>
                        <div class="col-sm-3 div_infoMessage">
                            <button id="btn_showPassword" type="button"></button>
                            <button type="button" tabindex="-1" data-toggle="dropdown" class="dropdown-toggle"></button>
                            <ul role="menu" class="dropdown-menu"></ul>
                        </div>
                    </div>
                    
                    @*save button*@
                    <div id="div_saveButton" class="form-group">
                        <div class="col-sm-6; text-center">
                            <button id="btn_save" type="submit" class="btn btn-danger">Kaydet</button>
                        </div>
                    </div>
                </div>
            </form>

            @*result label*@
            <div style="text-align:center">
                <p id="p_resultLabel"></p>
                <img id="img_loading" src="~/images/loading.gif" style="width:40px; height:40px" hidden/>
            </div>
        </div>
    </div>
</div>


<script type="module" src="~/js/miar_user.create.js"></script>
