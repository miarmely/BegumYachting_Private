<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4"><i class="fas fa-house-user"></i> Giriş Yap</h3></div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnURL"]" method="post">
                        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Email"></label>
                            <input class="form-control py-4" asp-for="Email" placeholder="Lütfen Email Adresinizi Giriniz.." />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Password"></label>
                            <input class="form-control py-4" asp-for="Password" type="password" placeholder="Lütfen Şifrenizi Giriniz" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" asp-for="RememberMe" type="checkbox" />
                                <label class="custom-control-label" asp-for="RememberMe">Beni Hatırla</label>
                            </div>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="btn btn-secondary text-white" asp-controller="Home" asp-action="ForgetPassword"><span class="fas fa-user-lock"></span> Şifremi Unuttum</a>
                            <button type="submit" class="btn btn-primary"><span class="fas fa-sign-in-alt"></span> Giriş</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


